<div class="container">
  <div class="d-flex">
    <h3 class="basic">Suggestion</h3>
  </div>
  <%= form_with model: @suggest, url: admin_suggests_path, local: true do |f| %>
    <%= render "layouts/errors", model: f.object %>
    <div><%=f.label :"パラフレーズ(paraphrase)" %></div>
    <%=f.text_field :suggest_word, class: "form-control" %>
    <div><%=f.label :"英文(sentence)"%></div>
    <%=f.text_area :suggest_english, size: "5x5", class: "form-control" %>
    <div><%=f.label :"和訳(japanese)"%></div>
    <%=f.text_area :suggest_japanese, size: "5x5", class: "form-control" %>
    <div class="submit-button mt-5 text-right"><%=f.submit:"投稿", class: "btn btn-outline-light bg-success float" %></div>
  <% end %>
</div>

