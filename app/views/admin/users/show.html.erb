  <div class="container shadow p-3 sheet rounded">
    <h3 class="text-center mb-4">ユーザー情報</h3>
      <div class="col-10 mx-auto">
        <div class="row text-center mb-3">
          <div class="col-md-6">
            ユーザー名
          </div>
          <div class="col-md-6">
            <%= @user.name %>
          </div>
        </div>
        <div class="row text-center mb-3">
          <div class="col-md-6">
            メールアドレス
          </div>
          <div class="col-md-6">
             <%= @user.email %>
          </div>
        </div>
        <div class="row text-center mb-3">
          <div class="col-md-6">
            登録日
          </div>
          <div class="col-md-6">
            <%= @user.created_at.strftime('%Y年%m月%d日 %H:%M') %>
          </div>
        </div>
      </div>
  </div>


