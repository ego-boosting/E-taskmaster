  <div class="container">
    <div class="row">
      <div class="col-sm-4">
        <%= render 'public/shared/profile_info', user: user, activities: activities %>
      </div>
      <div class="col-sm-8">
        <% if users.exists? %>
          <% users.each do |user| %>
            <div class="card float my-3">
              <div class="card-body">
                <div class="d-flex">
                  <div class="col-3">
                    <%= link_to share_index_user_path(user.id), class: 'text-secondary' do %>
                      <%= image_tag user.get_profile_image, class: 'round-profile' %>
                      <%= user.name %>
                    <% end %>
                  </div>
                  <div class="text-right col-9">
                    <span id="new-follow-<%= user.id %>">
                      <% if current_user.following?(user) %>
                        <%= link_to "フォロー外す", user_relationships_path(user.id), class: "btn btn-outline-danger rounded-pill float mb-3", remote: true, method: :delete %>
                      <% else %>
                        <%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-outline-primary rounded-pill float mb-3", remote: true, method: :post %>
                      <% end %>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
      </div>
    </div>
    <p class="text-center">ユーザユーザーはいません</p>
        <% end %>
  </div>





