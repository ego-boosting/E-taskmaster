<%# byebug %>
$(".new-comments").html("<%= j(render 'comment', note: @note, comment: @comment) %>");
$("textarea").val('');
$("#comment-counter").html(<%= @note.comments.count %>);
<% if flash[:notice] %>
  $(".notice").html("<%= flash[:notice] %>");
  $(".notice").show();
  setTimeout("$('.notice').fadeOut('slow')", 3000);
  setTimeout("$('.alert').fadeOut('slow')", 3000);
  <% flash[:notice] = nil %>
<% end %>