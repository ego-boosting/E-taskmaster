      <div class="row">
        <div class="col">
          <h1>Rome was not built in a day</h1>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="btn-wrapper col-10 mx-auto">
            <div class="row">
              <%= link_to 'ゲスト(閲覧用)こちら', users_guest_sign_in_path, method: :post %>
            </div>
