    $(document).ready(function(){
      $('.slick01').slick({
        autoplay: true,
        autoPlayDuration : 5000,
        adaptiveHeight: true,
        dots: true,
        prevArrow: '<span class="slick-prev"><i class="fas fa-arrow-alt-circle-left"></i></span>',
        nextArrow: '<span class="slick-next"><i class="fas fa-arrow-alt-circle-right"></i></span>',
      });
    })
  </script>

