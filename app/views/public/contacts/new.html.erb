<%= form_with model: @contact, url: confirm_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title, 'タイトル*' %>
    <%= f.text_field :title, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content, '内容*' %>
    <%= f.text_area :content, size: '10x10', class: 'form-control' %>
  </div>

  <div>
    <%= f.submit '入力内容確認' %>
  </div>
<% end %>