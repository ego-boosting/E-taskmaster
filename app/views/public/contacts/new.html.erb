  <div class="container">
    <div class="row shadow contact">
      <div class="col">
        <h3 class="mt-3 mb-3">お問い合わせフォーム</h3>
          <%= form_with model: @contact, url: create_confirm_path, local: true do |f| %>
            <%= render "layouts/errors", model: f.object %>
            <div class="form-group">
              <%= f.label :title, 'タイトル*' %>
              <%= f.text_field :title, placeholder: "タイトル", autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :content, '内容*' %>
              <%= f.text_area :content, placeholder: "メッセージを入力してください", size: '10x10', class: 'form-control' %>
            </div>

            <div class="form-group mb-4 text-center">
              <%= f.submit '入力内容確認', class: "btn btn-outline-secondary w-50 mt-3"%>
            </div>
          <% end %>
      </div>
    </div>
  </div>