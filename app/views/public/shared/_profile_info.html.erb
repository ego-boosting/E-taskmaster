  <div class="p-4 mr-5"><!-- profile wrapper start -->
    <div class="d-flex mb-3">
      <div><!-- profile image start -->
        <%= link_to edit_user_path(user), class: 'text-secondary text-decoration-none' do %>
          <div class="img-wrapper"><%= image_tag user.get_profile_image, class: 'round-profile' %></div>
        	<p><%= user.name %></p>
        <% end %>
      </div><!-- profile image end -->
      <div class="d-flex"><!-- like count start -->
        <div class="text-center ml-2">
          <% follow_my_staring = "-my-count" %>
          <% followings_id_string = "followings" %>
          <% followers_id_string = "followers" %>
          <% if current_user == @user %>
            <% followings_id_string = followings_id_string + follow_my_staring %>
            <% followers_id_string = followers_id_string + follow_my_staring %>
          <% end %>

          <%= link_to user_followings_path(user.id), class: "text-secondary text-decoration-none" do %>
            <p class="follow-counter" id="<%= followings_id_string %>"><%= user.followings.count %></p>
            <p>following</p>
          <% end %>
        </div>
        <div class="text-center ml-2">
          <%= link_to user_followers_path(user.id), class: "text-secondary text-decoration-none" do %>
            <p class="follow-counter" id="<%= followers_id_string %>"><%= user.followers.count %></p>
            <p>followers</p>
          <% end %>
        </div>
      </div><!-- like count end -->
  	</div>
  	<div class="d-flex justify-content-around">
  	  <div class="info">
      	<%= link_to notes_path, class: 'btn btn-outline-secondary rounded-pill float ' do %>
      	  <i class="fas fa-hands-helping text-danger"></i> share
      	<% end %>
    	</div>
    	<div class="info">
      	<%=link_to favorites_user_path(user), class: 'btn btn-outline-secondary rounded-pill float' do %>
      	  <i class="fas fa-bookmark text-warning"></i> favorite
      	<% end %>
    	</div>
    	<div>
      <%= link_to  user_activities_path(user.id), class: "bell-relative ml-3" do %>
        <span class="fa-layers fa-fw">
          <i class="fas fa-bell fa-2x notify" data-fa-transform="left-8 down-6"></i>
          <span class="fa-layers-counter counter fa-2x" style="background:Tomato"><%= activities.count %></span>
        </span>
      <% end %>
      </div>
    </div>
  </div><!-- profile wrapper end -->

