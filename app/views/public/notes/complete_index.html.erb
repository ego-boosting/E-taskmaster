  <div class="container">
    <div class="d-flex">
      <h3 class="basic">
      <ruby>覚<rp>（</rp><rt>おぼ</rt><rp>）</rp></ruby>えたフレーズ</h3>
    </div>
  </div>
  <div class="container mt-4">
    <div class="row">
      <% @notes.each do |note| %>
      <div class="col-md-4 mb-5">
        <div class="card note-card">
          <div class="card-body float">
            <h6 class="card-subtitle text-muted">フレーズ: <%= link_to note.word, note_path(note), class: "remembers-word" %></h6>
            <h5 class="card-title mb-2"></h5>英文: <%= note.english %>
            <p class="card-text">和訳: <%= note.japanese %></p>
            <%# 覚えたボタン%>
            <div class="float-left"><%= link_to "もう一度覚える", forget_note_path(note),method: :post, class: "btn btn-outline-light bg-danger float" %></div>
            <div class="float-right"><%= link_to "削除", note_path(note), method: :delete, data: {confirm: "ほんまに削除しますか?" }, class: "btn btn-outline-danger rounded-pill float" %></div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
      <div class="text-right"><%= link_to "覚えるページ", remember_index_notes_path, class: "btn btn-outline-light bg-success float" %></div>
  </div>
  <div class="pagination justify-content-center"><%= paginate @notes %></div>
