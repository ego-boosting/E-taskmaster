  <div class="container">
    <div class="row">
      <h3>
        <ruby>覚<rp>（</rp><rt>おぼ</rt><rp>）</rp></ruby>えるフレーズ</h3>
    </div>
  </div>
  <div class="container mt-4">
    <div class="row">
      <% @notes.each do |note| %>
        <div class="col-md-4 mb-5">
          <div class="card note-card">
            <div class="card-body shadow">
              <h6 class="card-subtitle text-muted">フレーズ: <%=link_to note.word, note_path(note) %></h6>
              <h5 class="card-title mb-2">英文: <%= note.english %></h5>
              <p class="card-text">和訳: <%= note.japanese %></p>
              <%# 覚えたボタン%>
              <%= link_to "覚えた", done_note_path(note),method: :post, class: "btn btn-outline-light bg-success" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-12 md-3">
        <div class="float-right"><%= link_to "覚えたページ", complete_index_notes_path, class: "btn btn-outline-light bg-success" %></div>
        <div class="float-left"><%= link_to "戻る", complete_index_notes_path, class: "btn btn-outline-light bg-success" %></div>
      </div>
    </div>
    <div class="row justify-content-center mt-3">
      <div class="paginations"><%= paginate @notes %></div>
    </div>
  </div>