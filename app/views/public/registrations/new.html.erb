  <div class="container d-flex justify-content-center">
    <div class="row">
      <h2 class="basic">E-taskmaster</h2>
    </div>
    <div><%= render "public/shared/error_messages", resource: resource %></div>
  </div>
  <div class="container d-flex justify-content-center mt-3">
    <div class="row">
      <div class="col">
        <div class="card">
          <div class="card-body shadow shadow-lg">
            <h3 class="basic">Sign up</h3>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

              <div class="field form-group">
                <%= f.label :name %><br>
                <%= f.text_field :name, class: "form-control" %>
              </div>

              <div class="field form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
              </div>

              <div class="field form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>

                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="field form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="actions">
                <%= f.submit "新規登録", class: "btn btn-block btn-outline-success bg-warning" %>
              </div>
              &emsp;
                <div class="text-muted">ログインの方はこちらから</div>
              &emsp;
            <% end %>

          <%= render "public/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>

