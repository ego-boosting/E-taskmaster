  <div class="container shadow p-3 mypage">
    <h3 class="text-center mb-4">Mypage</h3>
    <div class="col-10 mx-auto">
      <div class="row text-center mb-3">
          <div class="col-md-3">
            <ruby>
              <rb>名前</rb>
              <rp>（</rp>
              <rt>なまえ</rt>
              <rp>）</rp>
            </ruby>
          </div>
          <div class="col-md-9">
            <%= @user.name %>
          </div>
        </div>

        <div class="row text-center mb-3">
          <div class="col-md-3">
            E-mail
          </div>
          <div class="col-md-9">
            <%= @user.email %>
          </div>
        </div>

        <div class="row text-center">
          <div class="col-md-3">
            <ruby>
              <rb>登録日</rb>
              <rp>（</rp>
              <rt>とうろくび</rt>
              <rp>）</rp>
            </ruby>
          </div>
          <div class="col-md-9">
            <%= @user.created_at.strftime('%Y年%m月%d日') %>
          </div>
        </div>

        <% if @user.name != "guestuser" %>
          <div class='row'>
            <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>

<div class="container mt-3">
  <h3 class="text-center">
    Commit Paraphrases
  </h3>
  <%= line_chart @line_chart_data %>
</div>
