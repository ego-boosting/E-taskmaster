<h1>Mypage</h1>
  <table>
      <tr>
        <th>名前</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th>登録日</th>
        <td><%= @user.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      </tr>
  </table>
  <% if @user.name != "guestuser" %>
  <div class='row'>
    <%= link_to 'update',edit_user_path(@user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{@user.id}" %>
  </div>
  <% end %>