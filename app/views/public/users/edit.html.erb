  <div class="container mt-5">
    <div class="row">
      <div class="col">
        <h1 class="text-center">ユーザ編集</h1>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto">
        <%= form_with model: @user, local: true do |f| %>
          <table class="table">
            <tr>
              <th><%= f.label :"名前"%></th>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <th><%= f.label :"メールアドレス"%></th>
              <td><%= f.text_field :email %></td>
            </tr>
          </table>
          <%= f.submit :"update" %>
        <% end %>
      </div>
    </div>
  </div>