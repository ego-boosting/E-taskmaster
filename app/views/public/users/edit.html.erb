  <div class="container mt-5 shadow p-3 mypage">
    <div class="row">
      <div class="col">
        <h3 class="text-center">Mypage編集</h3>
      </div>
    </div>
    <div class="row mt-5 mb-5">
      <div class="mx-auto">
        <%= form_with model: @user, local: true do |f| %>
          <table class="table">
            <tr>
              <th><%= f.label :"名前"%></th>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <th><%= f.label :"メールアドレス"%></th>
              <td><%= f.text_field :email %></td>
            </tr>
          </table>
            <%= f.submit :"update", class: "btn btn-outline-secondary" %>
        <% end %>
      </div>
    </div>
  </div>